.wrapper
  .side-bar
    .side-bar__user
      .top-items
        %h2.top-items__name
          = current_user.name
        %ul.top-items__iconlist
          %li.top-items__iconlist--icons
            = link_to new_group_path do
              =icon('far', 'edit', class: 'icon')
          %li.top-items__iconlist--icons
            = link_to edit_user_path(current_user) do
              =icon('fas', 'cog', class: 'icon')
    .side-bar__grouplist
      - current_user.groups.each do |group|
        .side-bar__group
          = link_to group_messages_path(group) do
            .side-bar__group--name
              = group.name
            .side-bar__group--message
              = group.show_last_message